<div class="jumbotron">
  <h1><%= @recipe.title %></h1>
  <p class="btn-group">
    <%= link_to 'Edit recipe', edit_recipe_path(@recipe), class: 'btn btn-success btn-lg' %>
    <%= link_to 'Delete', @recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-success btn-lg' %>
    <%= link_to 'Back', recipes_path, class: 'btn btn-default btn-lg' %>
  </p>
</div>


<p>
  <strong>Category:</strong>
  <%= @recipe.category.try(:name)  %>
</p>

<p>
  <strong>Instructions:</strong>
  <%= @recipe.instructions %>
</p>

<p>
  <strong>Published on:</strong>
  <%= @recipe.published_on %>
</p>

<p>
  <strong>Ingredients:</strong>
  <ul>
  <% @recipe.ingredients.each do |ingredient| %>
  <li>
  <%= link_to ingredient.name, ingredient_path %>
  </li>
  <% end %>
  </ul>
</p>


