<h1>Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Instructions</th>
      <th>Published on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= recipe.instructions %></td>
        <td><%= recipe.published_on %></td>
        <td><%= link_to 'show', recipe %></td>
        <td><%= link_to 'edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'delete', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'add recipe', new_recipe_path %>
