<%= form_for(@quantity, html: {class: 'form'}) do |f| %>
    <div class="form-group">
      <%= f.label :quantity %><br>
      <%= f.text_field :quantity, class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.label :recipe_id %><br>
      <%= f.collection_select :recipe_id, Recipe.all, :id, :title, class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.label :ingredient_id %><br>
      <%= f.collection_select :ingredient_id, Ingredient.all, :id, :name, class: 'form-control'  %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  <% end %>