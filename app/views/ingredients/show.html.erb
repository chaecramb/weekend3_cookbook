<div class="jumbotron">
  <h1><%= @ingredient.name %></h1>
  <p class="btn-group">
    <%= link_to 'Edit ingredient', edit_ingredient_path(@ingredient), class: 'btn btn-success btn-lg' %>
    <%= link_to 'Delete', @ingredient, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-success btn-lg' %>
    <%= link_to 'Back', ingredients_path, class: 'btn btn-default btn-lg' %>
  </p>
</div>

<main class="container">
  <section class="row">
    <h1>Recipes</h1>
  </section>
  <section class="row">
    <% @ingredient.recipes.each do |recipe| %>
    <div class="col-sm-4">
      <%= link_to recipe.title, recipe %>
    </div>
    <% end %>
  </section>
</main>



