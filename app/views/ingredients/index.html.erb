<div class="jumbotron">
  <h1>Ingredients</h1>
  <%= link_to 'Add new ingredient', "#newIngredient", 'data-toggle' => 'modal', class: 'btn btn-default btn-lg' %>
</div>


<!-- Modal -->
<div class="modal fade" id="newIngredient">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Add ingredient</h4>
      </div>
      <div class="modal-body">
        <%= render 'ingredients/form', ingredient: @ingredient %>
      </div>
    </div>
  </div>
</div>
<!-- End Modal -->

<main class="container">
  <section class="row">
      <h1>Ingredients</h1>
  </section>
  <section class="row">
    <% @ingredients.each do |ingredient| %>
      <div class="col-sm-4">
        <% @ingredient = ingredient %>
        <%= ingredient.name %>
        <%= link_to 'show', ingredient %>

        <%= link_to 'edit', "#editIngredient_#{ingredient.id}", 'data-toggle' => 'modal' %>

        <!-- Modal -->
              <div class="modal fade" id='editIngredient_<%= ingredient.id%>' >
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                      <h4 class="modal-title">Edit ingredient</h4>
                    </div>
                    <div class="modal-body">
                      <%= render 'ingredients/form', ingredient: @ingredient %>
                    </div>
                  </div>
                </div>
              </div>
        <!-- End Modal -->

        <%= link_to 'delete', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
    <br>
  </section>
<!--   <section class="row">
    <%#= link_to 'add ingredient', new_ingredient_path %>
  </section> -->
</main>
