<main id="categories" class="container">
  <section class="row">
      <h1>Categories</h1>
  </section>
  <section class="row">
    <% @categories.each do |category| %>
      <div class="col-sm-4">
        <%= category.name %>
        <%= link_to 'show', category %>
        <%= link_to 'edit', edit_category_path(category) %>
        <%= link_to 'delete', category, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
    <br>
  </section>
</main>

