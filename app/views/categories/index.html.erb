<div class="jumbotron">
  <h1>Categories</h1>
  <p class="btn-group">
    <%= link_to 'Add new category', "#newCategory", 'data-toggle' => 'modal', class: 'btn btn-default btn-lg' %>
  </p>
</div>

<!-- Modal -->
<div class="modal fade" id="newCategory">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Add category</h4>
      </div>
      <div class="modal-body">
        <%= render 'categories/form', category: @category %>
      </div>
    </div>
  </div>
</div>
<!-- End Modal -->

<%= render partial: 'categories', category: @category %>
